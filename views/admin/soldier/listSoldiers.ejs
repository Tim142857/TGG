<%- contentFor('header') %>
<link rel='stylesheet' href='/stylesheets/style.css' />

<%- contentFor('body') %>
<div class="row">
  <div class="col-12">
    <h1 class="h1">Liste des soldat</h1>
    <br/>
    <a href="/admin/soldier" class="btn btn-success pull-right" role="button"><i class="fa fa-plus"></i></a>
    <table class='table text-center'>
      <thead>
        <tr id="nameTypeSoldier">
          <th>Nom</th>
          <th>Description</th>
          <th>Attaque</th>
          <th>Defense</th>
          <th>Cout</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<soldiers.length; i++) { %>
          <tr>
            <td><%= soldiers[i].name %></td>
            <td><%= soldiers[i].description %></td>
            <td><%= soldiers[i].atk %></td>
            <td><%= soldiers[i].def %></td>
            <td><%= soldiers[i].cost %></td>
            <td><%= soldiers[i].image %></td>
            <td>
              <a href="/admin/editSoldier/<%= soldiers[i].id %>" class="btn btn-warning" role="button"><i class="fa fa-edit"></i></a>
              <a href="/admin/deleteSoldier/<%= soldiers[i].id %>" class="btn btn-danger" role="button"><i class="fa fa-trash"></i></a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
